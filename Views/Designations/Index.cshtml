@model IEnumerable<EmployeeManagementSystem_Final.Models.Designation>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Add New Designation</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Designation List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
           
            <td>
                    <a asp-action="Edit" asp-route-id="@item.DesignationId" class="btn btn-primary btn-sm"><i class="fa fa-pen-to-square"></i>Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.DesignationId" class="btn btn-success btn-sm"><i class="fa fa-eye"></i>View</a> 
                    <a asp-action="Delete" asp-route-id="@item.DesignationId" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>